source "https://rubygems.org"

# Core Jekyll
gem "jekyll", "~> 4.3.3"

# Essential plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17"     # RSS feed support
  gem "jekyll-sitemap", "~> 1.4"   # XML sitemap generator
  gem "jekyll-seo-tag", "~> 2.8"   # SEO meta tags
end

# Windows-specific requirements
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw]
# Gemfile
gem 'wdm', '~> 0.1.1'
# Theme (if using minima or another theme)
gem "minima", "~> 2.5"